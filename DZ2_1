N = float(input('Введите число: '))
M = str (N)
x = M.split(".") # Если числа вводятся с запятой (123,45) то здесь надо ставить (",")
a = int(x[0])
b = int(x[1])
mult = 0
while (a!=0):
       mult= mult + (a%10)
       a = a//10
while (b!=0):
      mult= mult + (b%10)
      b = b//10  
print(mult)   
